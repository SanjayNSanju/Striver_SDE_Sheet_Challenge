#include <bits/stdc++.h>

int lengthOfLongestConsecutiveSequence(vector<int> &arr, int n) 
{
    sort(arr.begin(),arr.end());
    int lmax = INT_MIN;
    int l,j,i=0;
    while(i<n)
    {
        l = 1;
        j = i+1;
        while(j<n)
        {
            if(arr[i] == arr[j]-1)
            {
                l++;
                i++;
                j++;
            }
            else if(arr[i]==arr[j])
            {
                i++;
                j++;
            }
            else
                break;
        }
        lmax = max(l,lmax);
        i=j;
    }
    return lmax;
}
